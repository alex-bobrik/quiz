<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}User{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href={{ asset('css/bootstrap.css') }}>
        <link rel="stylesheet" href={{ asset('css/bootstrap-grid.css') }}>
        <link rel="stylesheet" href={{ asset('css/game.css') }}>
        <link rel="stylesheet" href={{ asset('css/global.css') }}>
        <link rel="stylesheet" href="{{ asset('css/logo-rotate.css') }}">
        <link rel="stylesheet" href={{ asset('js/embeddedFormHelper.js') }}>
    {% endblock %}
    {% block head %}{% endblock %}
</head>
<body style="padding-top: 90px">
{% block navbar %}

    <style>
        .create-quiz {
            margin-right: 30px;
        }
    </style>

        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('games_show') }}">
                <img src="{{ asset('images/logo.svg') }}" id="logo" alt="logo" width="50px" height="50px">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="{{ path('games_show') }}">Викторины</a>
                    <a class="nav-item nav-link" href="{{ path('about') }}">О нас</a>
                </div>
                <div class="navbar-nav">
                    <a href="{{ path('quizes_create') }}" class="btn btn-primary create-quiz">
                        Создать
                    </a>
                    <a href="{{ path('app.profile') }}" class="navbar-brand">
                        <img src="{{ asset('images/profile.svg') }}" alt="profile" width="30px" height="30px">
                    </a>
                    <a href="{{ path('app_logout') }}" class="navbar-brand">
                        <img src="{{ asset('images/logout.svg') }}" alt="logout" width="30px" height="30px">
                    </a>
                </div>
            </div>
        </nav>
{% endblock %}

<div>
    {% block flash_messages %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    {{ message | raw }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endblock %}
</div>



{% block body %}{% endblock %}

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.4.1.js"
            integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
