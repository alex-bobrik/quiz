{% extends 'admin_base.html.twig' %}

{% block title %}Create Question{% endblock %}


{% block body %}

    <link rel="stylesheet" href="{{ asset('css/question-answers.css') }}">


    {{ form_start(form) }}
    <div class="container">
        <div class="question-block">
            <div>
                <div>
                    {{ form_row(form.text, {
                        'label': 'Вопрос',
                        'attr': {
                            'placeholder': false,
                        }
                    }) }}
                </div>
                <div class="answers-block">
                    <ul class="list-group">
                        <ul id="type-fields-list" class="list-group"
                            data-prototype="{{ form_widget(form.answers.vars.prototype)|e('html_attr') }}"
                            data-widget-tags="{{ '<li class="list-group-item"></li>'|e }}"
                            data-widget-counter="{{ form.answers|length }}">
                            {% for answer in form.answers %}
                                <li class="list-group-item">
                                    {{ form_widget(answer) }}
                                </li>
                            {% endfor %}
                        </ul>

                        <div class="add-answer-block">
                            <button type="button"
                                    class="add-another-collection-widget btn btn-info"
                                    data-list-selector="#type-fields-list">Добавить ответ
                            </button>
                        </div>
                    </ul>
                </div>
            </div>
            <div class="submit-block">
                {{ form_widget(form.submit, {
                    'label': 'Сохранить вопрос',
                    'attr': {'class': 'btn btn-success'},
                }) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}