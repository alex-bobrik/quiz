{% extends 'user_base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}

    <table>
        <thead>
        <tr>
            <td>Quiz</td>
            <td>Created</td>
            <td>Questions amount</td>
        </tr>
        </thead>

        <tbody>
        {% for quiz in quizes %}
            <tr>
                <td><a href={{ path('games_start_play', {'quizId': quiz.id}) }}> {{ quiz.name }} </a></td>
                <td>{{ quiz.created.format('d/m/Y H:i:s') }}</td>
                <td>{{ quiz.questions.count }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
